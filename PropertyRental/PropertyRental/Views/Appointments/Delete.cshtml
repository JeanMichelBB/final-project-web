@model PropertyRental.Models.Appointment

@{
    ViewBag.Title = "Cancel appointment";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Date
        </dt>
        <dd>
            @{
                string date = Model.Timestamp.Value.ToShortDateString();
            }
            @Html.DisplayFor(model => date)
        </dd>

        <dt>
            Time
        </dt>

        <dd>
            @{
                string time = Model.Timestamp.Value.ToShortTimeString();
            }
            @Html.DisplayFor(model => time)
        </dd>

        <dt>
            Address
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address.StreetName)
            @Html.DisplayFor(model => model.Address.StreetNumber)
            @Html.DisplayFor(model => model.Address.City)
            @Html.DisplayFor(model => model.Address.Province)
        </dd>

        <dt>
            Property Manager
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PropertyManager.FirstName)
            @Html.DisplayFor(model => model.PropertyManager.LastName)
        </dd>
        @if (!User.IsInRole("Potential Tenant"))
        {
            <dt>
                @Html.DisplayNameFor(model => model.PotentialTenant.FirstName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PotentialTenant.FirstName)
            </dd>
        }


    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Cancel Appointment" class="btn btn-primary" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
