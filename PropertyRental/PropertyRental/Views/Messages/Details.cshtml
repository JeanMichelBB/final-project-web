@model PropertyRental.Models.Message

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Message</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            From
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sender.FirstName)
            @Html.DisplayFor(model => model.Sender.LastName) -
            @Html.ViewData["SenderEmail"].ToString()
        </dd>
           
        <dt>
            To
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Receiver.FirstName)
            @Html.DisplayFor(model => model.Receiver.LastName) -
            @Html.ViewData["ReceiverEmail"].ToString()

        </dd>

        <dt>
            Date and Time
        </dt>

        <dd>

            @Html.DisplayFor(model => model.Timestamp)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Subject)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Subject)
        </dd>

        <dt>
            Message
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MessageBody)
        </dd>
    </dl>
</div>
<p>
    @if (User.IsInRole("Admin") || User.IsInRole("Property Owner"))
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.MessageID })
    }
    @Html.ActionLink("Back to List", "Index/Received")
</p>
